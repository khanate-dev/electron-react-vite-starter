{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	"types": ["react", "react-dom"],
	"lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    }
  }
}
